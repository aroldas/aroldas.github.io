.topnav {
	text-align: center;
	width: 100%;
	overflow: show;
	background: rgb(10, 10, 10, 0.6);
	position: fixed; 
    top: 0; 
	left: 0; 
	backdrop-filter: blur(1vw);
}
body {
	background: rgb(10, 10, 10);
	height: 100%;
	font-family: sans-serif;
	color: rgb(249, 246, 238);
	background-image: url("../images/landing.jpg");
	background-repeat: no-repeat;
	background-position: top center;
	background-size: cover;
	background-attachment: fixed;
	width: 100%;
}
.topnav a {
	text-decoration: none;
	text-align: center;
	display: flex;
	font-size: 1vw;
	padding: 0vw 3vw;
	padding-top: 2vw;
	padding-bottom: 2vw;
	float: left;
	color: rgb(249, 246, 238);
}
.topnav .icon {
	display: none;
}
.landing {
	text-align: center;
	font-size: 2vw;
	padding-top: 10vw;
	padding-bottom: 5vw;
}
.home {
	text-align: center;
	font-size: 2vw;
	padding-top: 5vw;
	margin-left: 2vw;
	margin-right: 2vw;
	padding-bottom: 5vw;
}
.home p {
	font-size: 1.5vw;
	text-align: left;
}
.topnav:hover a:not(:hover) {
  opacity: 0.6;
}
.topnav a:hover{

}
@media screen and (max-width: 654px) {
  .topnav a {
	padding: 1vw 8.1vw;
  }
}
@media screen and (max-width: 600px) {
  .topnav a:not(:first-child)  {display: none;}
  .topnav a.icon {
	float: right;
    display: block;
  }
@media screen and (max-width: 600px) {
  .topnav.responsive {position: fixed;}
  .topnav.responsive a.icon {
    position: absolute;
    right: 0;
    top: 0;
  }
  .topnav.responsive a {
    float: none;
    display: block;
    text-align: left;
  }
  .topnav a {
	font-size: 6vw;
	padding-top: 4vw;
	padding-bottom: 4vw;
  }
   .topnav {
	width: 100%;
  }
  .landing {
	margin-top: 10vw;
	margin-bottom: 10vw;	
	font-size: 5vw;
  }
  }
}