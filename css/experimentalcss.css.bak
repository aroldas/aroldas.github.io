.topnav {
	background-color: red;
	text-align: center;
	padding: 1px;
	margin-top: 20px;
	max-width: 100%;
}
.name a {
	font-size: 2.5vw;
}
.topnav a {
	text-decoration: none;
	text-align: center;
	display: inline;
	color: black;
	font-size: 2vw;
	padding: 5vw;
}
.topnav a:hover {
	color: white;
}
.topnav .icon {
	display: none;
}
.landing h1 {
	text-align: center;
	size: 1000px;
}
@media screen and (max-width: 600px) {
  .topnav a:not(:first-child)  {display: none;}
  .topnav a.icon {
    display: inline;
	padding-left: 80vw;
  }
@media screen and (max-width: 600px) {
  .topnav.responsive {position: relative;}
  .topnav.responsive a.icon {
    position: absolute;
    right: 0;
    top: 0;
  }
  .topnav.responsive a {
    float: none;
    display: block;
    text-align: center;
  }
}